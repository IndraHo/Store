@model IEnumerable<Store.Domain.Entities.Product>

@{
    ViewBag.Title = "产品管理";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="panel panel-default">
    <div class="panel-heading">
        <h3>产品列表</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-condensed table-bordered">
            <thead>
                <tr>
                    <th class="text-right">编号</th>
                    <th>
                        名称
                    </th>
                    <th class="text-right">
                        价格
                    </th>
                    <th class="text-center">
                        编辑
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">
                            @item.ID
                        </td>
                        <td>
                            @Html.ActionLink(item.Name, "Edit", new { id = item.ID })
                        </td>
                        <td class="text-right">
                            @item.Price.ToString("c")
                        </td>
                        <td class="text-center">
                            @using (Html.BeginForm("Delete","Admin"))
                            {
                                @Html.Hidden("id",item.ID)
                                <input type="submit" class="btn btn-default btn-xs" value="删除" />
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="panel-footer">
        @Html.ActionLink("添加新产品","Create",null,new { @class="btn btn-default"})
    </div>
</div>
